<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <connectionStrings>
    <clear />
    <add name="NhibernateConnection" connectionString="Data Source=LSPHUC\MSSQLSERVERG;Initial Catalog=ARA20151024;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <appSettings>
    <add key="NHConfigResourceName" value="ARAManager.Business.Dao.Config.hibernate.cfg.xml" />
    <add key="NHConfigResourceAssembly" value="ARAManager.Business.Dao" />
  </appSettings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  <system.serviceModel>
    <services>
      <service name="ARAManager.Business.Service.Services.AccountServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.IAccountServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="AccountService" />
      </service>
      <service name="ARAManager.Business.Service.Services.ArDataServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.IArDataServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="ArDataService" />
      </service>
      <service name="ARAManager.Business.Service.Services.CampaignServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.ICampaignServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="CampaignService" />
      </service>
      <service name="ARAManager.Business.Service.Services.CompanyServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.ICompanyServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="CompanyService" />
      </service>
      <service name="ARAManager.Business.Service.Services.CustomerServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.ICustomerServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="CustomerService" />
      </service>
      <service name="ARAManager.Business.Service.Services.MissionServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.IMissionServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="MissionService" />
      </service>
      <service name="ARAManager.Business.Service.Services.SubscriptionServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.ISubscriptionServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="SubscriptionService" />
      </service>
      <service name="ARAManager.Business.Service.Services.TargetServiceImpl" behaviorConfiguration="ServiceBehaviorShowMetadata">
        <endpoint contract="ARAManager.Common.Services.ITargetServiceImpl" bindingName="http://www.nhibernate.com/example/" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" address="TargetService" />
      </service>
    </services>
    <bindings>
      <basicHttpBinding>
        <binding name="DefaultBasicHttpBinding" sendTimeout="00:03:00" maxReceivedMessageSize="2147483647" messageEncoding="Text" textEncoding="utf-8" transferMode="Buffered" maxBufferSize="2147483647" useDefaultWebProxy="true">
          <readerQuotas maxDepth="2147483647" maxStringContentLength="2147483647" maxArrayLength="2147483647" maxBytesPerRead="2147483647" maxNameTableCharCount="2147483647" />
          <security mode="None">
            <transport clientCredentialType="None" proxyCredentialType="None" realm="" />
            <message clientCredentialType="UserName" algorithmSuite="Default" />
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehaviorShowMetadata">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
        <behavior name="">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true"/>
  </system.serviceModel>
  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel" switchValue="Information, ActivityTracing" propagateActivity="true">
        <listeners>
          <add name="traceListener" type="System.Diagnostics.XmlWriterTraceListener" initializeData="c:\KabaLogs\Traces.svclog" />
        </listeners>
      </source>
    </sources>
  </system.diagnostics>
 <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
  </system.webServer>
  
  <log4net>
    <appender name="NHibernateSQL" type="log4net.Appender.RollingFileAppender">
      <file value="NHibernateSQL.log" />
      <appendToFile value="true" />
      <maximumFileSize value="50MB" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-7.7thread] %-6.6level %-30.30logger{1} | %message%newline%exception" />
      </layout>
    </appender>

    <!-- Set root logger level. -->
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFile" />
    </root>

    <logger name="NHibernate.SQL" additivity="false">
      <level value="ALL" />
      <appender-ref ref="NHibernateSQL" />
    </logger>
  </log4net>
</configuration>
